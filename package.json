{
  "name": "holdmyblocks",
  "version": "0.0.1",
  "description": "## VHosts",
  "main": "vite.config.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:plugin": "vite",
    "prod:plugin": "vite build",
    "build:plugin": "npm run prod:plugin --chore=all",
    "watch:react-blocks": "wp-scripts start --webpack-src-dir=components/blocks/react/src --output-path=components/blocks/react/build",
    "build:react-blocks": "wp-scripts build --webpack-src-dir=components/blocks/react/src --output-path=components/blocks/react/build",
    "plugin-zip": "wp-scripts plugin-zip",
    "prepare": "husky install"
  },
  "files": [
    "!vite.config.js",
    "holdmyblocks.php",
    "lang/",
    "build/",
    "includes/",
    "templates/",
    "components/blocks/acf/build/",
    "components/blocks/react/build/"
  ],
  "lint-staged": {
    "assets/scss/**/*.scss": [
      "npx stylelint --config .stylelintrc.json --allow-empty-input --ignore-path .stylelintignore --fix",
      "npx prettier --config .prettierrc.js --no-error-on-unmatched-pattern --ignore-path .prettierignore --write",
      "npx stylelint --config .stylelintrc.json --allow-empty-input --ignore-path .stylelintignore --fix"
    ],
    "components/blocks/**/src/**/*.scss": [
      "npx stylelint --config .stylelintrc.json --allow-empty-input --ignore-path .stylelintignore --fix",
      "npx prettier --config .prettierrc.js --no-error-on-unmatched-pattern --ignore-path .prettierignore --write",
      "npx stylelint --config .stylelintrc.json --allow-empty-input --ignore-path .stylelintignore --fix"
    ],
    "assets/js/**/*.js": [
      "npx prettier --config .prettierrc.js --no-error-on-unmatched-pattern --ignore-path .prettierignore --write",
      "npx eslint --config .eslintrc.js --no-error-on-unmatched-pattern --ignore-path .eslintignore --fix"
    ],
    "components/blocks/**/src/**/*.js": [
      "npx prettier --config .prettierrc.js --no-error-on-unmatched-pattern --ignore-path .prettierignore --write",
      "npx eslint --config .eslintrc.js --no-error-on-unmatched-pattern --ignore-path .eslintignore --fix"
    ]
  },
  "devDependencies": {
    "@mlnop/string-replace": "^1.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@wordpress/scripts": "^26.16.0",
    "autoprefixer": "^10.4.16",
    "browserslist": "^4.22.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
		"eslint-plugin-react": "^7.32.2",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.11.0",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "vite": "^4.5.0",
    "vite-plugin-run": "^0.4.1",
    "vite-plugin-static-copy": "^0.17.0",
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "git-precommit-checks": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "validate-branch-name": "^1.3.0"
  },
  "keywords": [],
  "author": "VDIANA DEV",
  "license": "(╯°□°）╯︵ ┻━┻",
  "dependencies": {
    "notyf": "^3.10.0"
  }
}
